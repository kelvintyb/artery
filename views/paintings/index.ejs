<h2>Create new painting</h2>
<form class="new-painting" action="/paintings" method="post">

  <div class="row">
    <div class="four columns">
      <input type="text" name="painting[name]" id="painting-name" placeholder="Painting Name" class="u-full-width">
    </div>
    <div class="four columns">
      <input type="text" name="painting[category]" id="painting-category" placeholder="Category" class="u-full-width">
    </div>
    <div class="four columns">
      <input type="text" name="painting[artist]" id="painting-artist" placeholder="Artist" class="u-full-width">
    </div>

    <div class="four columns">
      <input type="text" name="painting[imageUrl]" id="painting-imageUrl" placeholder="Image Link here" class="u-full-width">
    </div>
    <div class="four columns">
      <input type="text" name="painting[price]" id="painting-price" placeholder="Price" class="u-full-width">
    </div>
    <div class="four columns">
      <input type="text" name="painting[permalink]]" id="painting-permalink" placeholder="Permalink here" class="u-full-width">
    </div>

    <input type="submit" value='Save My Painting'>
  </div>

  <ul id="all-painting-list">
  <% allPaintings.forEach(function(painting) { %>
    <li>
        <%= painting.name %><br>
        <%= painting.category %><br>
        <%= painting.artist %><br>
        <%= painting.imageUrl %><br>
        <%= painting.price %><br>
        <%= painting.permalink %><br>
        <%= painting.likes %>
    </li>
  <% }) %>
  </ul>
</form>
