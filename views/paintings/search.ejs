<div id="search-page">
  <div class="col-md-4">
    <form id="searchName">
      <div class="input-group">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Go!</button>
        </span>
        <input type="text" class="form-control" name="name" placeholder="Search by painting name">
      </div><!-- /input-group -->
    </form>
  </div><!-- /.col-md-12 -->
      <form id="searchCategory">
        <div class="col-md-4">
          <div class="input-group">
            <span class="input-group-btn">
              <button class="btn btn-default" type="submit">Go!</button>
            </span>
            <input type="text" class="form-control" name="category" placeholder="Search by category">
          </div><!-- /input-group -->
      </form>
    </div><!-- /.col-md-12 -->
      <div class="col-md-4">
        <form id="searchArtist">
          <div class="input-group">
            <span class="input-group-btn">
              <button class="btn btn-default" type="submit">Go!</button>
            </span>
            <input type="text" class="form-control" name="artist" placeholder="Search by artist name">
          </div><!-- /input-group -->
        </form>
      </div><!-- /.col-md-12 -->


  <div class="row">
    <div id="search-painting-list">
      <% allPaintings.forEach(function(painting) { %>
      <div class="col-md-4 painting">
        <a href=<%= painting.permalink %>>
            Name: <%= painting.name %><br>
            Category: <%= painting.category %><br>
            Artist: <%= painting.artist %><br>
            <img class='img-thumbnail' src=<%= painting.imageUrl %> alt=<%= painting.name %> style="max-width:18.75em;max-height:25em"><br>
            Price: <%= painting.price %><br>
        </a>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<div id="portfolio-page" style="display:hidden;">

</div>
