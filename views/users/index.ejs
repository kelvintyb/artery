<h2>Create new user</h2>

<form class="new-user-passport" action="/signup" method="post">
  <%= message %>
  <div class="row">
    <div class="four columns">
      <input type="text" name="user[local][name]" id="user-name" placeholder="Your name" class="u-full-width" required>
    </div>
    <div class="four columns">
      <input type="text" name="user[local][email]" id="user-email" placeholder="Your user email" class="u-full-width" required>
    </div>
    <div class="four columns">
      <input type="password" name="user[local][password]" id="user-password" placeholder="Your user password" class="u-full-width" required>
    </div>
    <input type="submit" value='Save My User'>
  </div>

<% if(errors.length > 0) { %>
    <h3>Error found</h3>
    <ul>
    <% for (var error in errors[0]) { %>
      <li><%= errors[0][error].message %></li>
    <% } %>
    </ul>
<% } %>

  <ul id="all-user-list">

  </ul>
</form>
