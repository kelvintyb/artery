<h2>Login here</h2>
  <p> LOGIN WITH master@gmail.com : master</p>
  <p> Or create a new user <a href="/signup">here</a> </p>
<form class="login-user form-horizontal" action="/login" method="post">
  <div class="form-group">
      <label for="login-email" class="control-label col-md-1"> Email: </label>
    <div class="col-md-11">
      <input type="text" id="login-email" name="user[local][email]" placeholder="Your email" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <label for="login-password" class="control-label col-md-1"> Password: </label>
    <div class="col-md-11">
      <input type="password" id="login-password" name="user[local][password]" placeholder="Your password" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <input class="btn btn-default" type="submit" value='Log in'>
    </div>
  </div>
</form>

<% if(message.length > 0) { %>
  <h2>Error Found</h2>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>
