<a href="/logout"><button type="button" name="button">Logout</button></a>

<h2>Curator</h2>

<section class="col-md-12 artshow">
  <div class='paintingContainer'>
    <a href=<%= painting.permalink %> target="_blank">
    <img class='well' src=<%= painting.imageUrl %> alt=<%= painting.name %> style="width:400px;height:400px"></a><br>
    <p>Likes: <%=painting.likes%></p>

    <form class="btn" method="POST" action="/api/paintings/updatelikes">
      <input type="hidden" value=<%= painting.id %> name="paintingId" \>
      <button type="submit" class="btn btn-default"><i class="fa fa-thumbs-up fa-3x" style="color:green" aria-hidden="true"></i></button>
    </form>
    <a href="/curator" class='thumbs-down'><i class="fa fa-thumbs-down fa-3x" style="color:red" aria-hidden="true"></i></a>
  </div>
</section>
